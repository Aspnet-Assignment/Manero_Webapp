@page "/"

<PageTitle>Welcome</PageTitle>

<section class="welcome">
    <img class="manero-ring" src="/images/welcome/ring_1.svg" />
    <img class="manero-ring" src="/images/welcome/ring_2.svg" />
    <h1 class="welcome-title">MANERO</h1>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var elementsToFadeIn = document.querySelectorAll(".manero-ring, .welcome-title");
        elementsToFadeIn.forEach(function (element) {
            element.style.opacity = "0";
            fadeIn(element);
        });

        function fadeIn(element) {
            var opacity = 0;
            var timer = setInterval(function () {
                if (opacity >= 1) {
                    clearInterval(timer);
                    
                    setTimeout(function () {
                        window.location.href = "/welcome"; 
                    }, 3000);
                }
                element.style.opacity = opacity;
                opacity += 0.1;
            }, 100);
        }
    });
</script>
